<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:width="108dp"
            android:height="108dp"
            android:viewportWidth="108"
            android:viewportHeight="108">

            <!-- Gradient background -->
            <path
                android:name="background"
                android:pathData="M0,0h108v108h-108z">
                <aapt:attr name="android:fillColor">
                    <gradient
                        android:startX="0"
                        android:startY="0"
                        android:endX="108"
                        android:endY="108"
                        android:type="linear">
                        <item
                            android:offset="0"
                            android:color="#8B5CF6" />
                        <item
                            android:offset="0.5"
                            android:color="#3B82F6" />
                        <item
                            android:offset="1"
                            android:color="#14B8A6" />
                    </gradient>
                </aapt:attr>
            </path>

            <group
                android:name="iconGroup"
                android:pivotX="54"
                android:pivotY="54"
                android:translateX="54"
                android:translateY="54">

                <!-- Brain -->
                <path
                    android:name="brain"
                    android:pathData="M-12,-18 C-18,-18 -22,-14 -22,-8 C-22,-6 -21,-4 -19,-2 C-21,0 -22,2 -22,5 C-22,11 -18,15 -12,15 C-10,15 -8,14 -6,13 L-6,16 C-6,18 -4,20 -2,20 L2,20 C4,20 6,18 6,16 L6,13 C8,14 10,15 12,15 C18,15 22,11 22,5 C22,2 21,0 19,-2 C21,-4 22,-6 22,-8 C22,-14 18,-18 12,-18 C8,-18 5,-16 3,-13 C1,-16 -2,-18 -6,-18 C-8,-18 -10,-17 -12,-16 Z"
                    android:fillColor="#FFFFFF"
                    android:fillAlpha="0.95" />

                <!-- Neural connections -->
                <path
                    android:name="neurons"
                    android:pathData="M-8,-12 L-4,-8 M0,-12 L4,-8 M-12,-4 L-8,0 M-4,-4 L0,0 M4,-4 L8,0 M12,-4 L16,0 M-8,4 L-4,8 M0,4 L4,8 M8,4 L12,8"
                    android:strokeColor="#8B5CF6"
                    android:strokeWidth="1.5"
                    android:strokeLineCap="round"
                    android:trimPathStart="0"
                    android:trimPathEnd="1" />

                <!-- Chat bubble -->
                <path
                    android:name="chatBubble"
                    android:pathData="M16,-24 L28,-24 C30,-24 32,-22 32,-20 L32,-12 C32,-10 30,-8 28,-8 L24,-8 L20,-4 L20,-8 L16,-8 C14,-8 12,-10 12,-12 L12,-20 C12,-22 14,-24 16,-24 Z"
                    android:fillColor="#FFFFFF"
                    android:fillAlpha="0" />

                <!-- Sparkles -->
                <path
                    android:name="sparkle1"
                    android:pathData="M-26,-10 L-24,-10 M-25,-11 L-25,-9"
                    android:strokeColor="#FFFFFF"
                    android:strokeWidth="2"
                    android:strokeLineCap="round"
                    android:fillAlpha="0" />

                <path
                    android:name="sparkle2"
                    android:pathData="M24,18 L26,18 M25,17 L25,19"
                    android:strokeColor="#FFFFFF"
                    android:strokeWidth="1.5"
                    android:strokeLineCap="round"
                    android:fillAlpha="0" />

                <path
                    android:name="sparkle3"
                    android:pathData="M-18,22 L-16,22 M-17,21 L-17,23"
                    android:strokeColor="#FFFFFF"
                    android:strokeWidth="1.5"
                    android:strokeLineCap="round"
                    android:fillAlpha="0" />
            </group>
        </vector>
    </aapt:attr>

    <!-- Animations -->

    <!-- Pulse the entire icon group -->
    <target android:name="iconGroup">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="1500"
                    android:valueFrom="0.8"
                    android:valueTo="1.0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/overshoot" />
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="1500"
                    android:valueFrom="0.8"
                    android:valueTo="1.0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/overshoot" />
            </set>
        </aapt:attr>
    </target>

    <!-- Animate neurons drawing -->
    <target android:name="neurons">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathEnd"
                android:duration="1000"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:startOffset="500"
                android:interpolator="@android:anim/decelerate_interpolator" />
        </aapt:attr>
    </target>

    <!-- Fade in chat bubble -->
    <target android:name="chatBubble">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="600"
                android:valueFrom="0"
                android:valueTo="0.9"
                android:valueType="floatType"
                android:startOffset="1200" />
        </aapt:attr>
    </target>

    <!-- Sparkle animations -->
    <target android:name="sparkle1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="400"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:startOffset="1400"
                android:repeatCount="infinite"
                android:repeatMode="reverse" />
        </aapt:attr>
    </target>

    <target android:name="sparkle2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="400"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:startOffset="1600"
                android:repeatCount="infinite"
                android:repeatMode="reverse" />
        </aapt:attr>
    </target>

    <target android:name="sparkle3">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="400"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:startOffset="1800"
                android:repeatCount="infinite"
                android:repeatMode="reverse" />
        </aapt:attr>
    </target>
</animated-vector>